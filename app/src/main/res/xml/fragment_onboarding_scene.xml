<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/widget" />
        <Constraint
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            app:layout_constraintVertical_bias="0.262"
            android:id="@+id/logoMenu1"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_editor_absoluteX="22dp" />
        <Constraint
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@+id/menu2"
            app:layout_constraintBottom_toBottomOf="@+id/menu2"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_width="30dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/menu2"
            android:id="@+id/menu3"
            android:layout_marginStart="8dp" >
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/menu1"
            app:layout_constraintEnd_toStartOf="@+id/menu2"
            app:layout_constraintBottom_toBottomOf="@+id/menu2"
            android:layout_marginEnd="8dp" >
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1" />
        </Constraint>
        <Constraint
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/menu2"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_description_1"
            android:layout_marginTop="24dp">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
            android:id="@+id/iv_background_2"
            app:layout_constraintStart_toEndOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
            android:id="@+id/iv_background_1"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
            android:id="@+id/iv_background_3"
            app:layout_constraintStart_toEndOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_label_3"
            android:id="@+id/tv_onboarding_description_3"
            app:layout_constraintStart_toEndOf="parent"
            android:layout_marginStart="16dp" />
        <Constraint
            app:layout_constraintEnd_toEndOf="@+id/tv_onboarding_label_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_label_1"
            app:layout_constraintDimensionRatio="w,"
            app:layout_constraintStart_toStartOf="@+id/tv_onboarding_label_1"
            android:layout_marginTop="24dp"
            android:id="@+id/tv_onboarding_description_1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />
        <Constraint
            app:layout_constraintStart_toEndOf="parent"
            android:layout_width="386dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_background_2"
            android:layout_marginTop="64dp" />
        <Constraint
            app:layout_constraintEnd_toEndOf="@+id/tv_onboarding_label_2"
            app:layout_constraintStart_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_label_2"
            android:layout_marginTop="24dp"
            android:id="@+id/tv_onboarding_description_2"
            android:layout_marginStart="16dp" />
        <Constraint
            android:id="@+id/btn_next"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/btn_get_started"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible" />
        <Constraint
            app:layout_constraintStart_toEndOf="parent"
            android:layout_width="386dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_background_3"
            android:layout_marginTop="96dp"
            android:id="@+id/tv_onboarding_label_3" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/onboarding_2">
        <Constraint android:id="@id/widget" />
        <Constraint
            android:id="@+id/logoMenu1"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.40"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="30dp"
            android:layout_width="30dp"
            app:layout_constraintEnd_toStartOf="@+id/menu2"
            android:id="@+id/menu1"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/menu2"
            app:layout_constraintBottom_toBottomOf="@+id/menu2" >
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />
        </Constraint>
        <Constraint
            app:layout_constraintStart_toEndOf="@+id/menu2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/menu2"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/menu2"
            android:id="@+id/menu3"
            android:layout_marginStart="8dp" >
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />
        </Constraint>
        <Constraint
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/menu2"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_description_2"
            android:layout_marginTop="24dp">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
            android:id="@+id/iv_background_1"
            app:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
            android:id="@+id/iv_background_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
            app:layout_constraintStart_toEndOf="parent"
            android:id="@+id/iv_background_3" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_label_3"
            app:layout_constraintDimensionRatio="w,"
            app:layout_constraintStart_toEndOf="parent"
            android:id="@+id/tv_onboarding_description_3"
            android:layout_marginStart="16dp" />
        <Constraint
            android:layout_height="35dp"
            android:layout_marginTop="96dp"
            android:layout_width="386dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_background_3"
            android:id="@+id/tv_onboarding_label_3"
            app:layout_constraintStart_toEndOf="parent" />
        <Constraint
            android:layout_height="35dp"
            android:layout_marginTop="64dp"
            android:layout_width="386dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_background_2"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_onboarding_label_2"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_height="35dp"
            android:layout_marginTop="64dp"
            android:layout_width="386dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_background_1"
            android:id="@+id/tv_onboarding_label_1"
            app:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_label_1"
            app:layout_constraintDimensionRatio="w,"
            android:id="@+id/tv_onboarding_description_1"
            app:layout_constraintEnd_toStartOf="parent"
            android:layout_marginEnd="16dp" />
        <Constraint
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_label_2"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_onboarding_description_2"
            android:layout_marginStart="16dp" />
        <Constraint
            android:id="@+id/btn_next"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/btn_get_started"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/onboarding_2"
        app:constraintSetStart="@+id/start" >
        <OnSwipe app:dragDirection="dragLeft" />
        <OnClick app:targetId="@id/btn_next" />
    </Transition>
    <ConstraintSet
        android:id="@+id/end"
        app:deriveConstraintsFrom="@+id/onboarding_2" >
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
            android:id="@+id/iv_background_2"
            app:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/iv_background_3"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_label_3"
            app:layout_constraintDimensionRatio="w,"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_onboarding_description_3"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />
        <Constraint
            android:layout_height="35dp"
            android:layout_marginTop="96dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="386dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_background_3"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_onboarding_label_3" />
        <Constraint
            android:layout_height="35dp"
            android:layout_marginTop="64dp"
            android:layout_width="386dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_background_2"
            app:layout_constraintEnd_toStartOf="parent"
            android:id="@+id/tv_onboarding_label_2" />
        <Constraint
            android:id="@+id/menu3"
            app:layout_constraintStart_toEndOf="@+id/menu2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/menu2"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/menu2">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/menu2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:crossfade="1"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_description_3"
            android:layout_marginTop="24dp">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu1"
            app:layout_constraintEnd_toStartOf="@+id/menu2"
            android:layout_height="30dp"
            android:layout_width="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/menu2"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/menu2"
            app:crossfade="0" />
        <Constraint
            android:layout_height="35dp"
            android:layout_marginTop="64dp"
            android:layout_width="386dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_background_1"
            app:layout_constraintEnd_toStartOf="parent"
            android:id="@+id/tv_onboarding_label_1" />
        <Constraint
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="6dp"
            android:layout_width="wrap_content"
            android:id="@+id/guideline" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_label_2"
            android:id="@+id/tv_onboarding_description_2"
            app:layout_constraintEnd_toStartOf="parent"
            android:layout_marginEnd="16dp" />
        <Constraint
            android:id="@+id/btn_next"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/btn_get_started"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible" />
    </ConstraintSet>
    <Transition
        app:constraintSetStart="@+id/onboarding_2"
        app:constraintSetEnd="@+id/end" >
        <OnSwipe app:dragDirection="dragLeft" />
        <OnClick app:targetId="@id/btn_next" />
    </Transition>

</MotionScene>
