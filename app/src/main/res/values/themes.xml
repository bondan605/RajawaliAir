<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.RajawaliAir" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
<!--         <item name="colorPrimary">@color/my_light_primary</item> -->
        <!--    status bar    -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--    font    -->
        <item name="android:fontFamily">@font/roboto</item>
        <!--    app background    -->
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="Theme.RajawaliAir" parent="Base.Theme.RajawaliAir" />

    <style name="Widget"/>
    <style name="Widget.BottomNavigationView"/>
    <style name="Widget.BottomNavigationView.InactiveTextStyle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Widget.CustomActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">40dp</item>
        <item name="android:height">2dp</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
    <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
    <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
    <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal</item>
    <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
    <item name="android:color">@color/secondary_color</item>
    </style>



</resources>